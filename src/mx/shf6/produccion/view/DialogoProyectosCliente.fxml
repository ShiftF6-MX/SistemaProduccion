               <children>
                  <Label styleClass="labelRobotoMedium12" text="Costo Directo" />
                  <TextField fx:id="campoCostoDirecto" maxWidth="1.7976931348623157E308" styleClass="campoBuscador" />
               </children>
            </VBox>
            <VBox spacing="2.0">
               <children>
                  <Label styleClass="labelRobotoMedium12" text="Costo Indirecto" />
                  <TextField fx:id="campoCostoIndirecto" maxWidth="1.7976931348623157E308" styleClass="campoBuscador" />
               </children>
            </VBox>
            <VBox spacing="2.0">
               <children>
                  <Label styleClass="labelRobotoMedium12" text="Precio" />
                  <TextField fx:id="campoPrecio" maxWidth="1.7976931348623157E308" styleClass="campoBuscador" />
