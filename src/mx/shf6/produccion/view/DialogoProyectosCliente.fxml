<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefWidth="500.0" styleClass="dashBoardCard" stylesheets="@../application.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.shf6.produccion.view.DialogoProyectosCliente">
